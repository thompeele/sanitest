<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="external_connection_view_form" model="ir.ui.view">
        <field name="name">external.connection.form</field>
        <field name="model">external.connection</field>
        <field name="arch" type="xml">
            <form string="Connection">
                <header>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="active"/>
                        <field name="type"/>
                    </group>

                    <notebook name="notebook1">
                        <page name="information" string="Information">
                            <group>
                                <field name="features">
                                    <tree editable="top">
                                        <field name="name"/>
                                    </tree>
                                </field>
                            </group>
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="external_connection_view_tree" model="ir.ui.view">
        <field name="name">external.connection.tree</field>
        <field name="model">external.connection</field>
        <field name="arch" type="xml">
            <tree string="Connections">
                <field name="name"/>
                <field name="active"/>
                <field name="type"/>
            </tree>
        </field>
    </record>

    <record id="external_connection_action" model="ir.actions.act_window">
        <field name="name">Connections</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">external.connection</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
            </p><p>
            <!-- More details about what a user can do with this object will be OK -->
        </p>
        </field>
    </record>

</odoo>