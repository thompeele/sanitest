<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="sk_custom_header" inherit_id="report.external_layout_header">
            <xpath expr="//div[@class='header']" position="replace">
                    <div class="header">
                        <div class="row" style="padding:0 0 20 0; overflow:hidden;" >
                            <div class="col-xs-7" style="min-height:100px;">
                                <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo"
                                     style="max-height: 100px;"/>
                            </div>
                        </div>
                    </div>
                    <div name="company_address"></div>

            </xpath>
        </template>

    </data>
</odoo>