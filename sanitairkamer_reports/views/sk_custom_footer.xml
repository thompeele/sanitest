<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="sk_custom_footer" inherit_id="report.external_layout_footer">
            <xpath expr="//div[@class='footer']" position="replace">
                <div class="footer">
                        <small><div class="col-xs-4 text-left" name="company_address">
                            <span t-field="company.name"/>
                            <br/>
                            <span t-field="company.street"/>
                            <br/>
                            <span t-field="company.zip"/>
                            <span t-field="company.city"/>
                            <br/>
                        </div>
                        <div class="col-xs-4 text-center">
                            <span t-field="company.website"/>
                            <br/>
                            <span t-field="company.email"/>
                            <br/>
                            <span t-field="company.phone"/>
                            <br/>
                        </div>
                        <div class="col-xs-4 text-right">
                            <t t-if="not company.custom_footer" name="financial_infos">
                            <t t-set="is_first" t-value="True"/>
                                <t t-foreach="company.bank_journal_ids" t-as="journal">
                                    <t t-set="bank_acc" t-value="journal.bank_account_id"/>
                                    <t t-if="journal.display_on_footer">
                                        <t t-if="(is_first and company.vat) or (not is_first)">
                                            IBAN: <span t-esc="bank_acc.acc_number"/>
                                        </t>
                                        <t t-set="is_first" t-value="False"/>
                                    </t>
                                </t>
                            </t>
                            <br/>
                                <t t-if="company.company_registry">
                                    Chamber of Commerce: <span t-field="company.company_registry"/>
                                </t>
                            <br/>
                                <t t-if="company.vat">
                                    TIN: <span t-field="company.vat"/>
                                </t>
                        </div></small>

                    </div>
            </xpath>
        </template>
    </data>
</odoo>