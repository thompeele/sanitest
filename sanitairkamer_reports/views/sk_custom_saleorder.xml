<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="sk_custom_report_saleorder_document" inherit_id="sale.report_saleorder_document">
            <xpath expr="//h2" position="replace"/>
            <xpath expr="//div[@class='row mt32 mb32']" position="replace"/>

            <xpath expr="//div[@class='row']" position="replace">
                <div class="row" style="position:relative; min-height:150px; max-height:300px;">
                    <div class="col-xs-5" style="bottom:0;position:absolute;">
                        <h2>
                            <span t-if="doc.state not in ['draft','sent']">Order</span>
                            <span t-if="doc.state in ['draft','sent']">Quotation</span>
                            <span t-field="doc.name"/>
                        </h2>
                        <t t-if="doc.magento_id">
                            Magento Order Nr:
                            <span t-field="doc.magento_id"/>
                            <br/>
                        </t>
                        <t t-if="doc.magento_order_ext">
                            Magento Order Nr:
                            <span t-field="doc.magento_order_ext"/>
                            <br/>
                        </t>
                        <t t-if="doc.date_order">
                            <t t-if="doc.state not in ['draft','sent']">Date Ordered:</t>
                            <t t-if="doc.state in ['draft','sent']">Quotation Date:</t>
                            <span t-field="doc.date_order" t-field-options='{"widget" : "date"}'/>
                            <br/>
                        </t>
                        <t t-if="doc.requested_date">
                            Requested Date:
                            <span t-field="doc.requested_date" t-field-options='{"widget" : "date"}'/>
                            <br/>
                        </t>
                        <t t-if="doc.client_order_ref and not doc.magento_order_ext">
                            Your Reference:
                            <span t-field="doc.client_order_ref"/>
                            <br/>
                        </t>
                        <t t-if="doc.user_id.name">
                            Salesperson:
                            <span t-field="doc.user_id"/>
                            <br/>
                        </t>
                        <t t-if="doc.carrier_id.name">
                            Carrier:
                            <span t-field="doc.carrier_id.name"/>
                            <br/>
                        </t>
                        <t t-if="doc.payment_acquirer_id.name">
                            Payment Aquirer:
                            <span t-field="doc.payment_acquirer_id.name"/>
                            <br/>
                        </t>
                    </div>

                    <div class="col-xs-4 col-xs-offset-8">

                        <t t-if="not doc.magento_order_ext">
                            <div name="invoice_address" class="col-xs-12"
                                 groups="sale.group_delivery_invoice_address">

                                <div t-if="doc.partner_shipping_id == doc.partner_id">
                                    <strong>INVOICING/SHIPPING ADDRESS</strong>
                                    <br/>
                                    <t t-if="doc.partner_id.name">
                                        <span t-field="doc.partner_id.name"/>
                                        <br/>
                                    </t>
                                    <t t-if="doc.partner_id.street">
                                        <span t-field="doc.partner_id.street"/>
                                    </t>
                                    <t t-if="doc.partner_id.street2">
                                        <span t-field="doc.partner_id.street2"/>
                                        <br/>
                                    </t>
                                    <t t-if="doc.partner_id.zip">
                                        <span t-field="doc.partner_id.zip"/>,
                                    </t>
                                    <t t-if="doc.partner_id.city">
                                        <span t-field="doc.partner_id.city"/>
                                        <br/>
                                    </t>
                                    <t t-if="doc.partner_id.phone">
                                        <strong>T: </strong><span t-field="doc.partner_id.phone"/>
                                        <br/>
                                    </t>
                                    <t t-if="doc.partner_id.mobile">
                                        <strong>M: </strong><span t-field="doc.partner_id.mobile"/>
                                        <br/>
                                    </t>
                                    <t t-if="doc.partner_id.vat">
                                        <span t-field="doc.partner_id.vat"/>
                                        <br/>
                                    </t>
                                </div>

                                <div t-if="doc.partner_shipping_id != doc.partner_id">
                                    <div>
                                        <strong>INVOICING ADDRESS</strong>
                                        <br/>
                                        <t t-if="doc.partner_invoice_id.name">
                                            <span t-field="doc.partner_invoice_id.name"/>
                                            <br/>
                                        </t>
                                        <t t-if="doc.partner_invoice_id.street">
                                            <span t-field="doc.partner_invoice_id.street"/>
                                        </t>
                                        <t t-if="doc.partner_invoice_id.street2">
                                            <span t-field="doc.partner_invoice_id.street2"/>
                                            <br/>
                                        </t>
                                        <t t-if="doc.partner_invoice_id.zip">
                                            <span t-field="doc.partner_invoice_id.zip"/>,
                                        </t>
                                        <t t-if="doc.partner_invoice_id.city">
                                            <span t-field="doc.partner_invoice_id.city"/>
                                            <br/>
                                        </t>
                                        <t t-if="doc.partner_invoice_id.phone">
                                            <strong>T: </strong><span t-field="doc.partner_invoice_id.phone"/>
                                            <br/>
                                        </t>
                                        <t t-if="doc.partner_invoice_id.mobile">
                                            <strong>M: </strong><span t-field="doc.partner_invoice_id.mobile"/>
                                            <br/>
                                        </t>
                                        <t t-if="doc.partner_invoice_id.vat">
                                            <span t-field="doc.partner_invoice_id.vat"/>
                                            <br/>
                                        </t>
                                    </div>
                                    <div style="padding-top:10px;">
                                        <strong>SHIPPING ADDRESS</strong>
                                        <br/>
                                        <t t-if="doc.partner_shipping_id.name">
                                            <span t-field="doc.partner_shipping_id.name"/>
                                            <br/>
                                        </t>
                                        <t t-if="doc.partner_shipping_id.street">
                                            <span t-field="doc.partner_shipping_id.street"/>
                                        </t>
                                        <t t-if="doc.partner_id.street2">
                                            <span t-field="doc.partner_id.street2"/>
                                            <br/>
                                        </t>
                                        <t t-if="doc.partner_shipping_id.zip">
                                            <span t-field="doc.partner_shipping_id.zip"/>,
                                        </t>
                                        <t t-if="doc.partner_shipping_id.city">
                                            <span t-field="doc.partner_shipping_id.city"/>
                                            <br/>
                                        </t>
                                        <t t-if="doc.partner_shipping_id.phone">
                                            <strong>T: </strong><span t-field="doc.partner_shipping_id.phone"/>
                                            <br/>
                                        </t>
                                        <t t-if="doc.partner_shipping_id.mobile">
                                            <strong>M: </strong><span t-field="doc.partner_shipping_id.mobile"/>
                                            <br/>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </t>

                        <div t-if="doc.magento_order_ext" name="shipping_address"
                             class="col-xs-12" groups="sale.group_delivery_invoice_address">

                            <strong>INVOICING ADDRESS</strong>
                            <br/>
                            <t t-if="doc.partner_id.name">
                                <span t-field="doc.partner_id.name"/>
                                <br/>
                            </t>
                            <t t-if="doc.partner_id.street">
                                <span t-field="doc.partner_id.street"/>
                            </t>
                            <t t-if="doc.partner_id.street2">
                                <span t-field="doc.partner_id.street2"/>
                                <br/>
                            </t>
                            <t t-if="doc.partner_id.zip">
                                <span t-field="doc.partner_id.zip"/>,
                            </t>
                            <t t-if="doc.partner_id.city">
                                <span t-field="doc.partner_id.city"/>
                                <br/>
                            </t>
                            <t t-if="doc.partner_id.phone">
                                <strong>T: </strong><span t-field="doc.partner_id.phone"/>
                                <br/>
                            </t>
                            <t t-if="doc.partner_id.mobile">
                                <strong>M: </strong><span t-field="doc.partner_id.mobile"/>
                                <br/>
                            </t>
                            <t t-if="doc.partner_id.vat">
                                <span t-field="doc.partner_id.vat"/>
                                <br/>
                            </t>
                            <br/>
                            <br/>
                            <strong>SHIPPING ADDRESS</strong>
                            <br/>
                            <t t-if="doc.dropship_address.name">
                                <span t-field="doc.dropship_address.name"/>
                                <br/>
                            </t>
                            <t t-if="doc.dropship_address.street">
                                <span t-field="doc.dropship_address.street"/>
                            </t>
                            <t t-if="doc.dropship_address.housenumber">
                                <span t-field="doc.dropship_address.housenumber"/>
                                <br/>
                            </t>
                            <t t-if="doc.dropship_address.zipcode">
                                <span t-field="doc.dropship_address.zipcode"/>,
                            </t>
                            <t t-if="doc.dropship_address.city">
                                <span t-field="doc.dropship_address.city"/>
                                <br/>
                            </t>
                            <t t-if="doc.dropship_address.telephone">
                                <strong>T: </strong><span t-field="doc.dropship_address.telephone"/>
                                <br/>
                            </t>
                        </div>
                    </div>
                </div>

                <div class="row" style="min-height:20px;"/>

            </xpath>

            <xpath expr="//thead" position="replace">
                <thead>
                    <tr>
                        <th>Description</th>
                        <th>SKU</th>
                        <th class="text-right">Quantity</th>
                        <th class="text-right">Unit Price</th>
                        <th t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">
                            Disc.(%)
                        </th>
                        <th class="text-right">Taxes</th>
                        <th class="text-right" groups="sale.group_show_price_subtotal">Price</th>
                        <th class="text-right price_tax_included" groups="sale.group_show_price_total">Total Price</th>
                    </tr>
                </thead>
            </xpath>

            <xpath expr="//tbody[@class='sale_tbody']" position="replace">
                <tbody class="sale_tbody">
                    <t t-foreach="page" t-as="layout_category">

                        <t t-if="layout_category_size &gt; 1 or page_size &gt; 1" groups="sale.group_sale_layout">
                            <tr class="active">
                                <td colspan="7" style="font-weight: bold; border-bottom: 1px solid black;">&amp;bull;
                                    <t t-esc="layout_category['name']"/>
                                </td>
                            </tr>
                        </t>

                        <!-- Lines associated -->
                        <t t-foreach="layout_category['lines']" t-as="l">
                            <tr>
                                <td>
                                    <span t-field="l.name"/>
                                </td>
                                <td>
                                    <span t-field="l.product_id.default_code"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="l.product_uom_qty"/>
                                    <span t-field="l.product_uom" groups="product.group_uom"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="l.price_unit"/>
                                </td>
                                <td t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">
                                    <span t-field="l.discount"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.tax_id))"/>
                                </td>
                                <td class="text-right" groups="sale.group_show_price_subtotal">
                                    <span t-field="l.price_subtotal"
                                          t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"/>
                                </td>
                                <td class="text-right" groups="sale.group_show_price_total">
                                    <span t-field="l.price_total"
                                          t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"/>
                                </td>
                            </tr>
                        </t>

                        <t t-if="(layout_category_size &gt; 1 or page_size &gt; 1) and layout_category['subtotal']"
                           groups="sale.group_sale_layout">
                            <tr class="text-right">
                                <td colspan="6">
                                    <strong>Subtotal:</strong>
                                    <t t-set="subtotal"
                                       t-value="sum(line.price_subtotal for line in layout_category['lines'])"/>
                                    <span t-esc="subtotal"
                                          t-options="{'widget': 'monetary', 'display_currency': doc.pricelist_id.currency_id}"/>
                                </td>
                            </tr>
                        </t>

                    </t>
                </tbody>
            </xpath>

            <xpath expr="//p[@id='fiscal_position_remark']" position="after">
                <p style="padding-top:30px; font-size:11;" class="text-center">
                    <u>
                        <strong>We do not allow product returns because of color differences. Specially ordered products
                            cannot be returned.
                            <br/>
                            Damage claims have to be reported within 48 hours after receipt, otherwise they will not be
                            handled anymore!
                        </strong>
                    </u>
                </p>
            </xpath>
        </template>


    </data>
</odoo>