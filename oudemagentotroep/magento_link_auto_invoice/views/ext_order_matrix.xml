<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- Ext Order Matrix -->
        <record id="view_ext_order_matrix_form" model="ir.ui.view">
            <field name="name">ext.order.matrix.form</field>
            <field name="model">ext.order.matrix</field>
            <field name="inherit_id" ref="magento_link.view_ext_order_matrix_form"/>
            <field name="arch" type="xml">
                <field name="order_policy" position="after">
                    <field name="auto_invoice"/>
                </field>
            </field>
        </record>

        <record id="view_ext_order_matrix_tree" model="ir.ui.view">
            <field name="name">ext.order.matrix.tree</field>
            <field name="model">ext.order.matrix</field>
            <field name="inherit_id" ref="magento_link.view_ext_order_matrix_tree"/>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <field name="order_policy" position="after">
                    <field name="auto_invoice"/>
                </field>
            </field>
        </record>

    </data>
</odoo>
