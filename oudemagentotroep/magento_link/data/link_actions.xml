<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Product Template Server Actions-->
        <record model="ir.actions.server" id="action_product_template_need_sync">
            <field name="name">Need Sync on Product</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="code">
                if object:
                    products = object.env['product.product'].search([('product_tmpl_id','=',object.id)])
                    for product in products:
                        magentoproducts = object.env['magento.product'].search([('oe_product_id','=',product.id)])
                        magentoproducts.write({'need_sync': 'Yes'})
            </field>
        </record>

        <record id="rule_product_template_need_sync" model="base.action.rule">
            <field name="name">Set products on sync when product_template value changes</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="sequence">5</field>
            <field name="kind">on_write</field>
            <field name="server_action_ids" eval="[(6,0,[ref('action_product_template_need_sync')])]" />
        </record>

        <!-- Product Server Actions-->
        <record model="ir.actions.server" id="action_product_product_need_sync">
            <field name="name">Need Sync on Product</field>
            <field name="model_id" ref="product.model_product_product"/>
            <field name="code">
                if object:
                    magprods = object.env['magento.product'].search([('oe_product_id','=',object.id)])
                    magprods.write({'need_sync': 'Yes'})
            </field>
        </record>

        <record id="rule_product_product_need_sync" model="base.action.rule">
            <field name="name">Set products on sync when product value changes</field>
            <field name="model_id" ref="product.model_product_product"/>
            <field name="kind">on_write</field>
            <field name="sequence">5</field>
            <field name="server_action_ids" eval="[(6,0,[ref('action_product_product_need_sync')])]" />
        </record>

    </data>
</odoo>
