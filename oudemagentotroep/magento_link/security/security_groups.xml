<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data noupdate="0">
	<record model="ir.module.category" id="module_magento_link_cat">
		<field name="name">Magento Link</field>
		<field name="description">App to link Magento to ODOO</field>
		<field name="sequence">10</field>
    </record>
	
	<record id="group_link_user" model="res.groups">
		<field name="name">User</field>
		<field name="comment">Read acces for the users</field>
		<field name="category_id" ref="module_magento_link_cat"/>
	</record>

	<record id="group_link_manager" model="res.groups">
		<field name="name">Manager</field>
		<field name="comment">Full Access to the Magento Link</field>
		<field name="category_id" ref="module_magento_link_cat"/>
		<field name="users" eval="[(4, ref('base.user_root'))]"/>
	</record>

</data>
</odoo>
