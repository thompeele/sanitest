<?xml version="1.0"?>
<odoo>
    <data>

        <!-- Attribute-->
        <record id="magento_attribute_form" model="ir.ui.view">
            <field name="name">magento.attribute.form</field>
            <field name="model">magento.attribute</field>
            <field name="arch" type="xml">
                <form string="Attribute Set">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="attribute_set_id"/>
                            <field name="attribute_id"/>
                            <field name="type"/>
                        </group>
                        <group>
                            <field name="connection_id"/>
                            <field name="required"/>
                            <field name="scope"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="magento_attribute_tree" model="ir.ui.view">
            <field name="name">magento.attribute.tree</field>
            <field name="model">magento.attribute</field>
            <field name="arch" type="xml">
                <tree string="Attributes">
                    <field name="name"/>
                    <field name="type"/>
                    <field name="attribute_id"/>
                    <field name="attribute_set_id"/>
                    <field name="connection_id"/>
                </tree>
            </field>
        </record>

        <record id="action_view_magento_attribute" model="ir.actions.act_window">
            <field name="name">Magento Attributes</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">magento.attribute</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p><p>
                <!-- More details about what a user can do with this object will be OK -->
            </p>
            </field>
        </record>
    </data>
</odoo>
