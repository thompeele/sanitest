<?xml version="1.0"?>
<odoo>
    <data>
        
        <!-- Attribute Sets -->
        <record id="magento_attribute_set_form" model="ir.ui.view">
            <field name="name">magento.attribute.set.form</field>
            <field name="model">magento.attribute.set</field>
            <field name="arch" type="xml">
                <form string="Attribute Set">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="set_id"/>
                        </group>
                        <group>
                            <field name="connection_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="magento_attribute_set_tree" model="ir.ui.view">
            <field name="name">magento.attribute.set.tree</field>
            <field name="model">magento.attribute.set</field>
            <field name="arch" type="xml">
                <tree string="Attribute Sets">
                    <field name="name"/>
                    <field name="set_id"/>
                    <field name="connection_id"/>
                </tree>
            </field>
        </record>

        <record id="action_view_magento_attribute_set" model="ir.actions.act_window">
            <field name="name">Magento Attribute Sets</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">magento.attribute.set</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
              </p><p>
                <!-- More details about what a user can do with this object will be OK --> 
              </p>
            </field>
        </record>

    </data>
</odoo>
