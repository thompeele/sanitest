<?xml version="1.0"?>
<odoo>
    <data>

        <record id="view_order_form_inherit_link" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.link</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <data>

                    <field name="client_order_ref" position="after">
                        <field name="magento_order" readonly="1"/>
                        <field name="magento_status" readonly="1"/>
                    </field>

                </data>
           </field>
        </record>

        <record id="view_order_tree_inherit_link" model="ir.ui.view">
            <field name="name">sale.order.tree.inherit.link</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <data>
                    <field name="name" position="after">
                        <field name="magento_order"/>
                        <field name="magento_status"/>
                    </field>
                </data>
            </field>
        </record>

        <record id="view_quotation_tree_inherit_link" model="ir.ui.view">
            <field name="name">sale.quotation.tree.inherit.link</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree"/>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <data>
                    <field name="name" position="after">
                        <field name="magento_order"/>
                        <field name="magento_status"/>
                    </field>
                </data>
            </field>
        </record>

        <record id="view_sales_order_filter_inherit_link" model="ir.ui.view">
            <field name="name">sale.order.list.select.inherit.link</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_sales_order_filter"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='name']" position="attributes">
                        <attribute name="filter_domain">['|','|',('name','ilike',self),('client_order_ref','ilike',self),('magento_order','ilike',self)]</attribute>
                    </xpath>
                    <xpath expr="//field[@name='name']" position="after">
                        <field name="magento_order" string="Magento Order"/>
                        <field name="magento_status" string="Magento Status"/>
                    </xpath>
               </data>
            </field>
        </record>

    </data>
</odoo>
