<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>	
		<record id="magento_store_tree" model="ir.ui.view">
			<field name="name">magento.store.tree</field>
			<field name="model">magento.store</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Magento Stores">

					<field name="code"/>
					<field name="name"/>
					<field name="sales_team_id"/>
					<field name="pricelist_id"/>
					<field name="lang"/>
					<field name="website_id" invisible="1"/>
					<field name="group_id" invisible="1"/>
					<field name="store_id" invisible="1"/>
					<field name="active"/>

				</tree>
			</field>
		</record>

		<record id="magento_store_tree_action" model="ir.actions.act_window">
			<field name="name">Magento Stores</field>
			<field name="res_model">magento.store</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="magento_store_tree"/>
		</record>

		</data>
</odoo>
		
