<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="magento_synchronization_form" model="ir.ui.view">
            <field name="name">magento.synchronization.form</field>
            <field name="model">magento.synchronization</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form create="false" save="false" string="Magento Synchronization">					
					<header>
						<separator colspan="5" string="Magento Synchronization"/>
					</header>
					<sheet>
						<div>
							<p>
								<h3><label string="Click here to configure your Magento Api."/></h3>
								<button type="object" name="open_configuration" string="Configure Your Magento" icon="fa-cog" class="oe_inline oe_link"/>
								<label string="Before starting synchronization process, it's highly recommended to configure your magento api."/>
								
							</p>
						</div><br/>
						<div>
							<group >
								<label for="id" string="Export / Update Categories"/>
								<div>
									<button icon="fa-arrow-right" class="oe_highlight" name="export_categories" string="Export categories" type="object"/> or
									<button icon="fa-refresh" class="oe_highlight" name="update_categories_button" string="Update categories" type="object"/>
								</div>
							</group>
						</div><br/>
						<div>
						<group name="d">

						<label for="id" string="Export / Update Products"/>
							<div>
								<button icon="fa-arrow-right" class="oe_highlight" name="export_products" string="Export Products" type="object"/> or
								<button icon="fa-refresh" class="oe_highlight" name="update_products" string="Update Products" type="object"/>
							</div>					
						</group>
						</div><br/>
						<div>
							<group>
								<label for="id" string="Import Regions / Update Customers"/>
								<div>
									<button icon="fa-arrow-left" class="oe_highlight" name="%(action_synchronize_now)d" string="Import Regions" type="action"/>or
									<button icon="fa-refresh" class="oe_highlight" name="update_Customers_button" string="Update Customers" type="object"/>
								</div>
							</group>
						</div>
					</sheet>
				</form>
			</field>			
        </record>
        <record id="magento_synchronization_action" model="ir.actions.act_window">
            <field name="name">magento Synchronization</field>
            <field name="res_model">magento.synchronization</field>
            <field name="view_type">form</field>
            <field name="target">inline</field>
            <field name="view_id" ref="magento_synchronization_form"/>
        </record>

    </data>
</odoo>
