<?xml version="1.0"?>
<odoo>
    <data>
        
        <record id="product_product_magento_store_form" model="ir.ui.view">
            <field name="name">product.product.magento.store.form</field>
            <field name="model">product.product.magento.store</field>
            <field name="arch" type="xml">
                <form string="Magento Store Product">
                    <sheet>
                        <group>
                            <group>
                                <field name="product_id"/>
                                <field name="store_id"/>
                            </group>
                            <group>
                                <field name="meta_title"/>
                                <field name="meta_keyword"/>
                                <field name="meta_description"/>
                            </group>
                            <group>
                                <field name="url_key"/>
                                <field name="url_path"/>
                            </group>
                            <group>
                                <field name="special_price"/>
                                <field name="special_from"/>
                                <field name="special_to"/>
                            </group>
                            <group>
                                <field name="custom_design_from"/>
                                <field name="custom_design_to"/>
                            </group>
                            <group>
                                <field name="new_from"/>
                                <field name="new_to"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="product_product_magento_store_tree" model="ir.ui.view">
            <field name="name">product.product.magento.store.tree</field>
            <field name="model">product.product.magento.store</field>
            <field name="arch" type="xml">
                <tree string="Magento Store Products">
                        <field name="product_id"/>
                        <field name="store_id"/>
                        <field name="price"/>
                        <field name="special_price"/>
                        <field name="special_from"/>
                        <field name="special_to"/>
                        <field name="meta_title"/>
                </tree>
            </field>
        </record>
        
        <!-- Product Form inherit to place special fields -->
        <record id="product_normal_form_view_inherit_link" model="ir.ui.view">
            <field name="name">product.product.form.inherit.link</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="/form/sheet/notebook" position="inside">
                        <page string="Magento">
                            <group>
                                <group>
                                    <field name="meta_title"/>
                                    <field name="meta_keyword"/>
                                    <field name="meta_description"/>
                                </group>
                                <group>
                                    <field name="url_key"/>
                                    <field name="url_path"/>
                                </group>
                                <group>
                                    <field name="special_price"/>
                                    <field name="special_from"/>
                                    <field name="special_to"/>
                                </group>
                                <group>
                                    <field name="custom_design_from"/>
                                    <field name="custom_design_to"/>
                                </group>
                                <group>
                                    <field name="new_from"/>
                                    <field name="new_to"/>
                                </group>
                                <group>
                                    <field name="magento_image" readonly="1"/>
                                    <field name="magento_image_change" readonly="1"/>
                                </group>
                                <group>
                                    <field name="magento_type"/>
                                    <field name="magento_attribute_set"/>
                                </group>
                                <group>
                                    <field name="magento_visible"/>
                                    <field name="magento_send"/>
                                </group>
                            </group>
                            <group>
                                <field name="short_description"/>
                            </group>
                        </page>
                        <page string="Magento Store">
                            <field name="store_ids">
                                <tree string="Magento Store Products">
                                    <field name="store_id"/>
                                    <field name="price"/>
                                    <field name="special_price"/>
                                    <field name="special_from"/>
                                    <field name="special_to"/>
                                    <field name="meta_title"/>
                                </tree>
                                <form string="Magento Store Product">
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="store_id"/>
                                                <field name="price"/>
                                            </group>
                                            <group>
                                                <field name="meta_title"/>
                                                <field name="meta_keyword"/>
                                                <field name="meta_description"/>
                                            </group>
                                            <group>
                                                <field name="url_key"/>
                                                <field name="url_path"/>
                                            </group>
                                            <group>
                                                <field name="special_price"/>
                                                <field name="special_from"/>
                                                <field name="special_to"/>
                                            </group>
                                            <group>
                                                <field name="custom_design_from"/>
                                                <field name="custom_design_to"/>
                                            </group>
                                            <group>
                                                <field name="new_from"/>
                                                <field name="new_to"/>
                                            </group>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                    </xpath>

                </data>
           </field>
        </record>
        
        <record id="magento_product_type_form" model="ir.ui.view">
            <field name="name">magento.product.type.form</field>
            <field name="model">magento.product.type</field>
            <field name="arch" type="xml">
                <form string="Type">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="odoo_type"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="magento_product_type_tree" model="ir.ui.view">
            <field name="name">magento.product.type.tree</field>
            <field name="model">magento.product.type</field>
            <field name="arch" type="xml">
                <tree string="Types">
                    <field name="name"/>
                    <field name="odoo_type"/>
                </tree>
            </field>
        </record>

        <record id="action_view_magento_product_type" model="ir.actions.act_window">
            <field name="name">Product Types</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">magento.product.type</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
              </p><p>
                <!-- More details about what a user can do with this object will be OK -->
              </p>
            </field>
        </record>
        
    </data>
</odoo>
