<?xml version="1.0"?>
<odoo>
    <data>

        <record id="invoice_tree_inherit_link" model="ir.ui.view">
            <field name="name">account.invoice.tree.inherit.link</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_tree"/>
            <field name="arch" type="xml">
                    <field name="number" position="after">
                        <field name="magento_order"/>
                        <field name="magento_invoice"/>
                    </field>
            </field>
        </record>

        <record id="invoice_form_inherit_link" model="ir.ui.view">
            <field name="name">account.invoice.form.inherit.link</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form//field[@name='journal_id']" position="after">
                    <field name="magento_order"/>
                    <field name="magento_invoice"/>
                </xpath>
            </field>
        </record>

        <record id="view_account_invoice_filter_inherit_link" model="ir.ui.view">
            <field name="name">account.invoice.select.inherit.link</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                    <field name="number" position="after">
                        <field name="magento_order" string="Magento Order"/>
                        <field name="magento_invoice" string="Magento Order"/>
                    </field>
            </field>
        </record>

    </data>
</odoo>
