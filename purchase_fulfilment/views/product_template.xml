<odoo>

    <!-- Product Form inherit to place special fields -->
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.common.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.view_template_property_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//group[@name='inventory']/group[@name='group_lots_and_weight']" position="after">
                    <group name="external_fulfil" string="External Info">
                        <field name="external_fulfilment_qty"/>
                        <field name="external_fulfilment_eol"/>
                    </group>
                </xpath>
            </data>
        </field>
    </record>

</odoo>