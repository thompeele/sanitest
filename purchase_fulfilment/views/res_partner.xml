<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Fulfilment">
                    <field name="external_fulfilment_partners">
                        <tree editable="bottom">
                            <field name="external_fulfilment"/>
                            <field name="external_id"/>
                            <field name="active"/>
                            <field name="sales_team_id"/>
                            <button name="fulfil_product_sync" string="Product Sync" type="object" icon="terp-gtk-jump-to-ltr"/>
                            <button name="fulfil_product_map" string="Product Map" type="object" icon="terp-go-home"/>
                            <button name="fulfil_orderlist_state" string="Check Order State" type="object" icon="terp-accessories-archiver"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

</odoo>