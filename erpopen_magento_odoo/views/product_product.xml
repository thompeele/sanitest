<odoo>
    <data>

        <record id="product_template_form_inherit" model="ir.ui.view">
            <field name="name">product_template_form_inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <field name="default_code" position="attributes">
                    <attribute name="required">1</attribute>
                </field>
                <xpath expr="//page[@name='notes']" position="after">
                    <page string="Magento Images" name="magento_images">
                        <field name="magento_images_ids" string="Images IDS"
                               widget="multidragndrop"/>
                    </page>
                </xpath>
                <xpath expr="//page[@name='notes']" position="after">
                    <page name="Magento" string="Magento">
                        <group>
                            <group>
                                <field name="magento_sync"/>
                                <field name="magento_status" string="Status"/>
                                <field name="magento_visibility" string="Visibility"/>
                                <field name="magento_weight" string="Weight"/>
                                <field name="magento_set" string="Attribute Set"/>
                                <field name="magento_type" string="Type"/>
                                <field name="magento_special_price" string="Special Price"/>
                            </group>
                            <group>
                                <field name="magento_special_from_date" string="Special From"/>
                                <field name="magento_special_to_date" string="Special To"/>
                                <field name="magento_meta_title" string="Meta Title"/>
                                <field name="magento_meta_keyword" string="Meta Keyword"/>
                                <field name="magento_meta_description" string="Meta Description"/>
                                <field name="magento_custom_design" string="Custom Design"/>
                            </group>
                        </group>
                        <group>
                            <field name="magento_category_ids" string="Categories"/>
                        </group>
                        <group>
                            <button type="object" name="export_update_product"
                                    string="Update Product" groups="base.group_system"/>
                            <br/>
                            <button type="object" name="export_update_stock" string="Update Stock" groups="base.group_system"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>


        <record id="product_product_tree_view_inherit" model="ir.ui.view">
            <field name="name">product_product_tree_view_inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="magento_status" string="Status"/>
                    <field name="magento_visibility" string="Visibility"/>
                    <field name="magento_weight" string="Weight"/>
                    <field name="magento_special_price" string="Special Price"/>
                </field>
            </field>
        </record>

        <record id="product_product_form_view_inherit" model="ir.ui.view">
            <field name="name">product_product_form_view_inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <field name="attribute_value_ids" position="replace"/>
                <field name="default_code" position="after">
                    <field name="magento_id" />
                </field>
                <field name="default_code" position="attributes">
                    <attribute name="required">1</attribute>
                </field>
                <xpath expr="//page[@name='notes']" position="after">
                    <page string="Magento Images" name="magento_images">
                        <field name="magento_images_ids" string="Images IDS"
                               widget="multidragndrop"/>
                    </page>
                </xpath>
                <xpath expr="//page[@name='notes']" position="after">
                    <page name="Magento" string="Magento">
                        <group>
                            <group>
                                <field name="magento_sync"/>
                                <field name="magento_status" string="Status"/>
                                <field name="magento_visibility" string="Visibility"/>
                                <field name="magento_weight" string="Weight"/>
                                <field name="magento_set" string="Attribute Set"/>
                                <field name="magento_type" string="Type"/>
                                <field name="magento_special_price" string="Special Price"/>
                            </group>
                            <group>
                                <field name="magento_special_from_date" string="Special From"/>
                                <field name="magento_special_to_date" string="Special To"/>
                                <field name="magento_meta_title" string="Meta Title"/>
                                <field name="magento_meta_keyword" string="Meta Keyword"/>
                                <field name="magento_meta_description" string="Meta Description"/>
                                <field name="magento_custom_design" string="Custom Design"/>
                            </group>
                        </group>
                        <group name="description">
                            <separator string="Description" colspan="4"/>
                            <field name="magento_description" colspan="4" nolabel="1" placeholder="The description." modifiers="{}"/>
                        </group>
                        <group>
                            <field name="magento_category_ids" string="Categories"/>
                        </group>
                        <group>
                            <button type="object" name="export_update_product"
                                    string="Update Product" groups="base.group_system"/>
                            <br/>
                            <button type="object" name="export_update_stock" string="Update Stock" groups="base.group_system"/>
                        </group>
                    </page>
                </xpath>
                <xpath expr="//page[last()]" position="after">
                    <page string="Magento Attributes">
                        <group>
                            <field name="attribute_value_ids">
                                <tree editable="bottom">
                                    <field name="attribute_id"/>
                                    <field name="name"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                    <page name="additional_costs" string="Additional Costs">
                        <form string="Pricelist Items">
                            <separator string="Additional Costs (use only for payment costs)"/>
                            <group>
                                <group>
                                    <field name="min_quantity"/>
                                </group>
                            </group>
                            <separator string="Price Computation"/>
                            <group>
                                <group>
                                    <label for="compute_price" string="Compute Price"/>
                                    <div>
                                        <field name="compute_price" widget="radio"/>
                                        <field name="currency_id" invisible="1"/>
                                        <div attrs="{'invisible':[('compute_price', '!=', 'fixed')]}">
                                            <field name="fixed_price" nolabel="1" widget='monetary'
                                                   options="{'currency_field': 'currency_id'}"/>
                                        </div>
                                        <div attrs="{'invisible':[('compute_price', '!=', 'percentage')]}">
                                            <field name="percent_price" nolabel="1"
                                                   class="oe_inline"/>%%
                                        </div>
                                    </div>
                                </group>
                            </group>
                            <div class="oe_grey" groups="product.group_uom">
                                <p>The computed price is expressed in the default Unit of Measure of
                                    the product.
                                </p>
                            </div>
                        </form>
                    </page>
                </xpath>

            </field>
        </record>


    </data>
</odoo>