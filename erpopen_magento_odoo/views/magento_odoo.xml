<odoo>
    <data>
        <record id="magento_odoo_settings_form" model="ir.ui.view">
            <field name="name">Settings</field>
            <field name="model">magento.settings</field>
            <field name="arch" type="xml">
                <form string="Your configuration" class="oe_form_configuration">
                    <sheet>
                        <group string="Company">
                            <group>
                                <label for="id" string="Name &amp; Phone"/>
                            </group>
                            <group>
                                <field name="name" string="name"/>
                                <field name="company" string="Company"/>
                            </group>
                        </group>
                        <group string="Magento">
                            <label for="id" string="Magento Settings"/>
                            <div>
                                <div>
                                    <label for="url"/>
                                    <field name="url"/>
                                </div>
                                <div>
                                    <label for="username"/>
                                    <field name="username"/>
                                </div>
                                <div>
                                    <label for="password"/>
                                    <field name="password" password="True"/>
                                </div>
                            </div>
                        </group>
                        <notebook>
                            <page string="Auto-Import">
                                <span>When hitting on a save button below, only the cron execution
                                    times will be changed not the incremental times, that happens
                                    only when hitting the save on top of this page.
                                </span>
                                <group>
                                    <field group="base.group_system"
                                           name="magento_time_zone_adjustment"
                                           string="time zone adjustment"
                                           help="Only usefull when there are timezone problems between magento and odoo"/>
                                    <field name="incremental_imports"/>
                                </group>
                                <group>
                                    <group string="Categories">
                                        <field name="import_categories_interval_time"
                                               string="Interval Time"/>
                                        <field name="import_categories_interval_units"
                                               string="Interval Unit"/>
                                    </group>
                                    <group>
                                        <button string="Save" type="object"
                                                name="create_cron_categories" class="oe_highlight"
                                                style="margin-top: 45px;"/>
                                    </group>
                                    <group string="Attributes and Values">
                                        <field name="import_attributes_interval_time"
                                               string="Interval Time"/>
                                        <field name="import_attributes_interval_units"
                                               string="Interval Unit"/>
                                    </group>
                                    <group>
                                        <button string="Save" type="object"
                                                name="create_cron_attribute" class="oe_highlight"
                                                style="margin-top: 45px;"/>
                                    </group>
                                    <group string="Customers">
                                        <field name="import_customers_interval_time"
                                               string="Interval Time"/>
                                        <field name="import_customers_interval_units"
                                               string="Interval Unit"/>
                                    </group>
                                    <group>
                                        <button string="Save" type="object"
                                                name="create_cron_customers" class="oe_highlight"
                                                style="margin-top: 45px;"/>
                                    </group>
                                    <group string="Products">
                                        <field name="import_products_interval_time"
                                               string="Interval Time"/>
                                        <field name="import_products_interval_units"
                                               string="Interval Unit"/>
                                    </group>
                                    <group>
                                        <button string="Save" type="object"
                                                name="create_cron_products" class="oe_highlight"
                                                style="margin-top: 45px;"/>
                                    </group>
                                    <group string="Products Stock">
                                        <field name="import_products_stock_interval_time"
                                               string="Interval Time"/>
                                        <field name="import_products_stock_interval_units"
                                               string="Interval Unit"/>
                                    </group>
                                    <group>
                                        <button string="Save" type="object"
                                                name="create_cron_products_stock"
                                                class="oe_highlight" style="margin-top: 45px;"/>
                                    </group>
                                    <group string="Sales Orders">
                                        <field name="import_sales_orders_interval_time"
                                               string="Interval Time"/>
                                        <field name="import_sales_orders_interval_units"
                                               string="Interval Unit"/>
                                    </group>
                                    <group>
                                        <button string="Save" type="object"
                                                name="create_cron_sales_orders" class="oe_highlight"
                                                style="margin-top: 45px;"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Import Settings">
                                <group>
                                    <group string="Sales Order / Products">
                                        <field name="magento_sale_order_prefix" string="Prefix"/>
                                        <field name="magento_sale_order_status"
                                               string="Import Only Status"/>
                                        <field name="magento_sale_order_from"
                                               string="Import Order/Product From"
                                               help="Not the create dates, only the last updated dates"/>
                                        <field name="magento_sale_order_to"
                                               string="Import Order/Product To"
                                                help="Not the create dates, only the last updated dates"/>
                                        <field name="magento_sale_order_from_ecommerce"
                                               string="Set From E-commerce"/>
                                    </group>
                                    <group string="Products">
                                        <field name="magento_product_simple_product"
                                               string="Only Simple Product"/>
                                    </group>
                                    <group string="Invoices">
                                        <field name="magento_sale_order_auto_invoice"
                                               string="Sales order - Auto Invoice"/>
                                        <field name="magento_invoice_prefix"
                                               string="Invoice Prefix"/>
                                        <field name="magento_account_id" string="Default Account"
                                               attrs="{'required': [('magento_sale_order_auto_invoice','=',True)]}"/>
                                        <field name="magento_company_id" string="Default Company"
                                               attrs="{'required': [('magento_sale_order_auto_invoice','=',True)]}"/>
                                        <field name="magento_currency_id" string="Default Currency"
                                               attrs="{'required': [('magento_sale_order_auto_invoice','=',True)]}"/>
                                        <field name="magento_journal_id" string="Default Journal"
                                               attrs="{'required': [('magento_sale_order_auto_invoice','=',True)]}"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Export Settings">
                                <group>
                                    <field name="enable_syncing_to_magento"/>
                                    <group string="Customers">
                                        <field name="magento_customer_email"
                                               string="Default Email"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Manual import">
                                <group>
                                    <group string="Products">
                                        <field name="manual_import_product_magento_id"
                                               string="Magento ID"/>
                                    </group>
                                    <group>
                                        <button string="Sync" type="object"
                                                name="manual_sync_product" class="oe_highlight"
                                                style="margin-top: 45px;"/>
                                    </group>
                                </group>
                                <group>
                                    <group string="Sale orders">
                                        <field name="manual_import_sale_order_magento_id"
                                               string="Magento ID"/>
                                    </group>
                                    <group>
                                        <button string="Sync" type="object"
                                                name="manual_sync_sale_order" class="oe_highlight"
                                                style="margin-top: 45px;"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

