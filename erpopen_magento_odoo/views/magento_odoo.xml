        <record id="view_res_partner_filter_inherit" model="ir.ui.view">
            <field name="name">view_res_partner_filter_inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="arch" type="xml">

                <xpath expr="//filter[@name='inactive']" position="after">
                    <field name="magento_group" string="Magento Group"
                           filter_domain="[('magento_group','ilike',self)]"/>
                    <field name="store_id" string="Magento Store"
                           filter_domain="[('store_id','ilike',self)]"/>
                    <field name="mfirstname" string="Magento Firstname"
                           filter_domain="[('mfirstname','ilike',self)]"/>
                    <field name="mlastname" string="Magento Lastname"
                           filter_domain="[('mlastname','ilike',self)]"/>
                    <field name="mlastname" string="Magento Lastname"
                           filter_domain="[('mlastname','ilike',self)]"/>
                    <field name="mpassword" string="Magento Password"
                           filter_domain="[('mpassword','ilike',self)]"/>
                    <field name="mgender" string="Magento Gender"
                           filter_domain="[('mgender','ilike',self)]"/>
                    <field name="mmiddlename" string="Magento Middlename"
                           filter_domain="[('mmiddlename','ilike',self)]"/>
                    <filter string="Magento: For Export" name="magento_for_export"
                            domain="[('magento_id','=',False)]"/>
                    <filter string="Magento: Exported" name="magento_exported"
                            domain="[('magento_id','!=',False)]"/>
                </xpath>

            </field>
        </record>

