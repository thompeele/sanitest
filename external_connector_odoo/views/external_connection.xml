<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="external_connection_view_form" model="ir.ui.view">
        <field name="name">external.connection.view.form</field>
        <field name="model">external.connection</field>
        <field name="inherit_id" ref="external_connector.external_connection_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook[@name='notebook1']" position="inside">
                <page string="ODOO XMLRPC" attrs="{'invisible': [('type', '!=', 'odoo_xmlrpc')]}">
                    <group>
                        <field name="odoo_xmlrpc_server" attrs="{'required': [('type', '=', 'odoo_xmlrpc')]}"/>
                        <field name="odoo_xmlrpc_database" attrs="{'required': [('type', '=', 'odoo_xmlrpc')]}"/>
                        <field name="odoo_xmlrpc_user" attrs="{'required': [('type', '=', 'odoo_xmlrpc')]}"/>
                        <field name="odoo_xmlrpc_password" password="1" attrs="{'required': [('type', '=', 'odoo_xmlrpc')]}"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>