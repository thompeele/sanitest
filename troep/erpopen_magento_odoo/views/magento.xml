<odoo>
    <data>
        <record id="view_magento_settings_tree" model="ir.ui.view">
            <field name="name">magento.settings.tree</field>
            <field name="model">magento.settings</field>
            <field name="arch" type="xml">
                <tree string="Magento Shops">
                    <field name="name" />
                    <field name="url" />
                </tree>
            </field>
        </record>

        <record id="view_magento_settings_search" model="ir.ui.view">
            <field name="name">magento.settings.search</field>
            <field name="model">magento.settings</field>
            <field name="arch" type="xml">
                <search string="Magento">
                    <field name="name" string="Name"/>
                </search>
            </field>
        </record>

        <record id="mage_magento_webshop_action" model="ir.actions.act_window">
            <field name="name">Magento webshop</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">magento.settings</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_magento_settings_search"/>
            <field name="view_id" ref="view_magento_settings_tree"/>
        </record>
    </data>
</odoo>