<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- SANITAIRKAMER -->

        <!-- VERZAMELLIJST SK-->

        <template id="budgetsanitair_picking_dropship_document"
                  inherit_id="sanitairkamer_reports.sk_custom_report_picking_document">

            <xpath expr="//div[@class='row']" position="replace">
                <div class="row" t-if="not budgetsanitair">
                    <div class="col-xs-4 pull-right"
                         t-if="o.move_lines and o.move_lines[0].partner_id and o.move_lines[0].partner_id.id != o.partner_id.id">
                        <span>
                            <strong>DELIVERY ADDRESS:</strong>
                        </span>
                        <div id="delivery_address" t-field="o.move_lines[0].partner_id"
                             t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;, &quot;fax&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                    </div>

                    <div class="col-xs-4 pull-right"
                         t-if="o.picking_type_id.code != 'internal' and (not o.move_lines or not o.move_lines[0].partner_id) and o.picking_type_id.warehouse_id.partner_id">
                        <span>
                            <strong>WAREHOUSE ADDRESS:</strong>
                        </span>
                        <div t-field="o.picking_type_id.warehouse_id.partner_id"
                             t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;, &quot;fax&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                    </div>
                    <div class="col-xs-4 pull-right">
                        <t t-if="o.picking_type_id.code=='incoming' and o.partner_id">
                            <span>
                                <strong>VENDOR ADDRESS:</strong>
                            </span>
                        </t>
                        <t t-if="o.picking_type_id.code=='internal' and o.partner_id">
                            <span>
                                <strong>WAREHOUSE ADDRESS:</strong>
                            </span>
                        </t>

                        <t t-if="o.picking_type_id.code=='outgoing' and o.partner_id">
                            <t t-if="not delivery_address">
                                <span>
                                    <strong>DELIVERY ADDRESS:</strong>
                                </span>
                            </t>
                            <t t-if="delivery_address">
                                <span>
                                    <strong>CUSTOMER ADDRESS:</strong>
                                </span>
                            </t>
                        </t>
                        <div t-field="o.partner_id"
                             t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;,&quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                        <p t-if="o.sudo().partner_id.vat">VAT:
                            <span t-field="o.sudo().partner_id.vat"/>
                        </p>
                    </div>
                </div>
                <div class="row" t-if="budgetsanitair">
                    <div class="col-xs-4 pull-right">
                        <div id="dropship_address">
                            <span>
                                <strong>DELIVERY ADDRESS:</strong>
                            </span>
                            <br/>
                            <span t-field="o.dropship_address.name"/>
                            <br/>
                            <span t-field="o.dropship_address.street"/>
                            <span t-field="o.dropship_address.housenumber"/>
                            <br/>
                            <span t-field="o.dropship_address.city"/>
                            <br/>
                            <span t-field="o.dropship_address.telephone" t-options="{&quot;phone_icons&quot;: True}"/>
                            <br/>
                        </div>
                    </div>
                </div>
            </xpath>

            <xpath expr="//h2" position="before">
                <p t-if="o.sale_id.magento_order_ext and not budgetsanitair">
                    <br/>
                    <strong>WARNING: This a a Budget-Sanitair order. Please print a different Pickorder.</strong>
                    <br/>
                </p>
                <p t-if="not o.sale_id.magento_order_ext and budgetsanitair">
                    <br/>
                    <strong>WARNING: This a a Sanitairkamer order. Please print a different Pickorder.</strong>
                    <br/>
                </p>

            </xpath>

            <xpath expr="//table" position="replace">
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>
                                <t t-if="o.origin and not budgetsanitair and not o.sale_id.magento_order">
                                    <strong>Order (Origin)</strong>
                                </t>
                                <t t-if="o.sale_id.magento_order and not budgetsanitair">
                                    <strong>Order (Origin)</strong>
                                </t>
                                <t t-if="o.sale_id.magento_order_ext and budgetsanitair">
                                    <strong>Order (Origin)</strong>
                                </t>
                            </th>
                            <th>
                                <strong>State</strong>
                            </th>
                            <th name="td_sched_date_h">
                                <strong>Scheduled Date</strong>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td t-if="o.origin and not budgetsanitair and not o.sale_id.magento_order">
                                <span t-field="o.origin"/>
                            </td>
                            <td t-if="o.sale_id.magento_order and not budgetsanitair">
                                <span t-field="o.sale_id.magento_order"/>
                            </td>
                            <td t-if="o.sale_id.magento_order_ext and budgetsanitair">
                                <span t-field="o.sale_id.magento_order_ext"/>
                            </td>
                            <td>
                                <span t-field="o.state"/>
                            </td>
                            <td name="td_sched_date">
                                <span t-field="o.min_date"/>
                            </td>
                        </tr>
                    </tbody>
                </table>

            </xpath>
        </template>


        <!-- PAKBON -->

        <template id="bs_delivery_dropship_budgetsanitair"
                  inherit_id="sanitairkamer_reports.sk_custom_report_delivery_document">
            <xpath expr="//div[@name='customer_address']" position="replace">
                <div class="row" name="customer_address">
                    <div class="col-xs-4 pull-right">
                        <div>
                            <span>
                                <strong>DELIVERY ADDRESS:</strong>
                            </span>
                        </div>
                        <t t-if="not budgetsanitair">
                            <div t-if="o.move_lines and o.move_lines[0].partner_id" name="partner_header">
                                <div t-field="o.move_lines[0].partner_id"
                                     t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;, &quot;fax&quot;], &quot;no_marker&quot;: True}"/>
                            </div>
                            <div t-if="not (o.move_lines and o.move_lines[0].partner_id) and o.partner_id"
                                 name="partner_header">
                                <div t-field="o.partner_id"
                                     t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;, &quot;fax&quot;], &quot;no_marker&quot;: True}"/>
                            </div>
                        </t>
                        <t t-if="budgetsanitair">
                            <div name="partner_header">
                                <span t-field="o.dropship_address.name"/>
                                <br/>
                                <span t-field="o.dropship_address.street"/>
                                <span t-field="o.dropship_address.housenumber"/>
                                <br/>
                                <span t-field="o.dropship_address.city"/>
                                <br/>
                                <span t-field="o.dropship_address.telephone"
                                      t-options="{&quot;phone_icons&quot;: True}"/>
                                <br/>
                            </div>
                        </t>
                    </div>
                </div>
            </xpath>

            <xpath expr="//h2" position="before">
                <p t-if="o.sale_id.magento_order_ext and not budgetsanitair">
                    <br/>
                    <strong>WARNING: This a a Budget-Sanitair order. Please print a differente Delivery Slip.</strong>
                    <br/>
                </p>
                <p t-if="not o.sale_id.magento_order_ext and budgetsanitair">
                    <br/>
                    <strong>WARNING: This a a Sanitairkamer order. Please print a differente Delivery Slip.</strong>
                    <br/>
                </p>
            </xpath>

            <xpath expr="//table" position="replace">
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>
                                <t t-if="o.origin and not o.sale_id.magento_order and not o.sale_id.magento_order_ext">
                                    <strong>Order (Origin)</strong>
                                </t>
                                <t t-if="o.sale_id.magento_order">
                                    <strong>Order (Origin)</strong>
                                </t>
                                <t t-if="o.sale_id.magento_order_ext and budgetsanitair">
                                    <strong>Order (Origin)</strong>
                                </t>
                            </th>
                            <th>
                                <strong>State</strong>
                            </th>
                            <th name="td_sched_date_h">
                                <strong>Scheduled Date</strong>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <t t-if="o.origin and not o.sale_id.magento_order and not o.sale_id.magento_order_ext">
                                    <span t-field="o.origin"/>
                                </t>
                                <t t-if="o.sale_id.magento_order">
                                    <span t-field="o.sale_id.magento_order"/>
                                </t>
                                <t t-if="o.sale_id.magento_order_ext and budgetsanitair">
                                    <span t-field="o.sale_id.magento_order_ext"/>
                                </t>
                            </td>
                            <td>
                                <span t-field="o.state"/>
                            </td>
                            <td name="td_sched_date">
                                <span t-field="o.min_date"/>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </xpath>

        </template>
    </data>
</odoo>